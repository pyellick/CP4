<ContentDialog
    x:Class="CP4.Dialogs.GameHistoryContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="PlayerNameTextBox" PlaceholderText="Enter Player Name" Width="250" Margin="10"/>
        <ComboBox x:Name="TeamComboBox" PlaceholderText="Select Team" Width="250" Margin="10" />

        <Button Content="Save Player" Click="SavePlayerButton_Click" />
        <Button Content="Cancel" Click="CancelButton_Click" />
    </StackPanel>
</ContentDialog>
