<ContentDialog
    x:Class="CP4.Dialogs.AddPlayerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:ConnectionId='2' x:Name="PlayerNameTextBox" PlaceholderText="Enter Player Name" Width="250" Margin="10"/>

        <Button x:ConnectionId='3' Content="Save Player"                                />
        <Button x:ConnectionId='4' Content="Cancel"                            />
    </StackPanel>
</ContentDialog>

