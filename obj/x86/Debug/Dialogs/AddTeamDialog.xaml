<ContentDialog x:ConnectionId='1' x:Class="CP4.AddTeamDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Create a New Team"
    PrimaryButtonText="Cancel"
    SecondaryButtonText="Save"
                                                         
                                                             
    BorderBrush="White"
    BorderThickness="5"
    Foreground="White"
    CornerRadius="10">


    <!-- Custom background gradient -->
    <ContentDialog.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#417CDB" Offset="0" />
            <GradientStop Color="#2657A7" Offset="0.5" />
            <GradientStop Color="#253E97" Offset="1" />
        </LinearGradientBrush>
    </ContentDialog.Background>

    

    <!-- Style for the TextBox elements -->
    <ContentDialog.Resources>
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="SelectionHighlightColor" Value="{ThemeResource SystemControlHighlightAccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"/>
                            <ScrollViewer
                        x:Name="ContentElement"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="{TemplateBinding Foreground}"
                        Padding="{TemplateBinding Padding}"
                        IsTabStop="False"
                        VerticalAlignment="Center"
                        AutomationProperties.AccessibilityView="Raw"
                        HorizontalScrollMode="{TemplateBinding ScrollViewer.HorizontalScrollMode}"
                        HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                        IsHorizontalRailEnabled="{TemplateBinding ScrollViewer.IsHorizontalRailEnabled}"
                        IsVerticalRailEnabled="{TemplateBinding ScrollViewer.IsVerticalRailEnabled}"
                        IsDeferredScrollingEnabled="{TemplateBinding ScrollViewer.IsDeferredScrollingEnabled}"
                        VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
                        VerticalScrollMode="{TemplateBinding ScrollViewer.VerticalScrollMode}"
                        ZoomMode="Disabled"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Define a custom ComboBox style -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border
                        x:Name="ComboBoxBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                                <Grid>
                                    <ToggleButton
                                x:Name="ToggleButton"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Padding="6,4"
                                HorizontalContentAlignment="Right">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Grid>
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CommonStates">
                                                            <VisualState x:Name="Normal"/>
                                                            <VisualState x:Name="PointerOver"/>
                                                            <VisualState x:Name="Pressed"/>
                                                            <VisualState x:Name="Disabled"/>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <ContentPresenter
                                                Content="{TemplateBinding Content}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"/>
                                                    <FontIcon
                                                Glyph="&#xE0E5;"
                                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                Foreground="White"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Margin="200,0,6,0"/>
                                                    <!-- Adjusted margin to place on the right -->
                                                </Grid>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                    <ContentPresenter
                                x:Name="ContentPresenter"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0"/>
                                </Grid>
                            </Border>
                            <Popup
                        x:Name="Popup"
                        IsLightDismissEnabled="True">
                                <Border
                            Background="White"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                                    <ScrollViewer
                                x:Name="ScrollViewer"
                                Foreground="{TemplateBinding Foreground}"
                                Padding="{TemplateBinding Padding}">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom button style for Save and Close buttons -->
        <Style x:Key="CustomDialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Margin" Value="5"/>
            <!-- Adjust the margin as needed -->

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </ContentDialog.Resources>

    
    

    <!-- Content of your dialog -->
    <StackPanel Margin="20">
        <!-- Label for Team Name -->
        <TextBlock Text="Team Name" Foreground="White" Margin="0,0,0,5"/>



        <!-- Team Name TextBox -->
        <TextBox x:ConnectionId='21'
            x:Name="TeamNameTextBox"
            Margin="0,0,0,10"
            Style="{StaticResource CustomTextBoxStyle}"
            Background="Transparent"
            BorderBrush="White"
            BorderThickness="2"
            Foreground="White"
            Padding="8,6" FocusVisualPrimaryBrush="White"/>

        <TextBlock Text="Primary Color" Foreground="White" Margin="0,0,0,5"/>

        <!-- Primary Color ComboBox -->
        <ComboBox x:ConnectionId='22'
    x:Name="PrimaryColorComboBox"
    Width="231"
    Margin="0,0,0,10"
                                                            
    Style="{StaticResource CustomComboBoxStyle}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="16" Height="16" Stroke="Black" StrokeThickness="1">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding Color}" />
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="{Binding Name}" Margin="8,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Text="Secondary Color" Foreground="White" Margin="0,0,0,5"/>

        <!-- Secondary Color ComboBox -->
        <ComboBox x:ConnectionId='23'
    x:Name="SecondaryColorComboBox"
    Width="231"
    Margin="0,0,0,10"
                                                              
    Style="{StaticResource CustomComboBoxStyle}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="16" Height="16" Stroke="Black" StrokeThickness="1">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding Color}" />
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="{Binding Name}" Margin="8,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Team Logo" Foreground="White" Margin="0,0,0,5"/>

        <!-- Team Logo ComboBox -->
        <ComboBox x:ConnectionId='24'
    x:Name="TeamLogoComboBox"
    Width="231"
    Margin="0,0,0,10"
    Style="{StaticResource CustomComboBoxStyle}"
                                                        >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding LogoImagePath}" Width="32" Height="32" />
                        <TextBlock Text="{Binding TeamName}" Margin="8,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Box to display selected team logo -->
        <Border x:ConnectionId='25' x:Name="SelectedLogoBorder" Width="150" Height="150" Margin="0,30,0,-20" BorderThickness="4" CornerRadius="5" Visibility="Collapsed">
            <Image x:ConnectionId='26' x:Name="SelectedLogoImage" Width="120" Height="120" Stretch="UniformToFill" />
        </Border>

    </StackPanel>

    <!-- Custom button style for "Save" button -->
    <ContentDialog.PrimaryButtonStyle>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="70"/>
        </Style>
    </ContentDialog.PrimaryButtonStyle>

    <!-- Custom button style for "Cancel" button -->
    <ContentDialog.SecondaryButtonStyle>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="70"/>
        </Style>
    </ContentDialog.SecondaryButtonStyle>


</ContentDialog>

