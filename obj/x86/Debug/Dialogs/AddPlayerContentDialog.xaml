<ContentDialog
    x:Class="CP4.Dialogs.AddPlayerContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add Player"
    PrimaryButtonText="Add"
    SecondaryButtonText="Cancel">

    <StackPanel>
        <TextBlock Text="Player Name:" />
        <TextBox x:ConnectionId='2' x:Name="PlayerNameTextBox" PlaceholderText="Enter player name" Margin="0,5" />
        <TextBlock Text="Team Name:" />
        <TextBlock x:ConnectionId='3' x:Name="TeamNameTextBlock" Margin="0,5" />
    </StackPanel>
</ContentDialog>

