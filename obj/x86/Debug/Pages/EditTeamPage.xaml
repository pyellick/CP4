<Page
    x:Class="CP4.Pages.EditTeamPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.Resources>

        <Style x:Key="CustomTransparentButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonPointerOverForegroundThemeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonPressedForegroundThemeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonDisabledForegroundThemeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter"
                         Content="{TemplateBinding Content}"
                         ContentTransitions="{TemplateBinding ContentTransitions}"
                         ContentTemplate="{TemplateBinding ContentTemplate}"
                         Margin="{TemplateBinding Padding}"
                         HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                         VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NewPlayerButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontWeight" Value="SemiLight" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>


    </Page.Resources>
    
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <!-- Define gradient stops with the specified colors -->
                <GradientStop Color="#417CDB" Offset="0" />
                <GradientStop Color="#2657A7" Offset="0.5" />
                <GradientStop Color="#253E97" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Viewbox Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <!-- Header with Team Name -->
        <TextBlock x:ConnectionId='14' x:Name="TeamNameText" Text="" HorizontalAlignment="Center" Foreground="White" FontSize="60" VerticalAlignment="Top" Margin="600,10,600,10"/>
            
        </Viewbox>

        <Viewbox Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center">

            <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center">
                <!-- New Player Button goes here-->
                <Button x:ConnectionId='13' Margin="100,40,100,30" Style="{StaticResource NewPlayerButtonStyle}" Width="450" Height="45"                              >
                    <Button.Content>
                        <Grid>
                            <TextBlock Text="+" FontSize="55" Margin="-20,-13,0,0"  FontWeight="SemiLight" FontStyle="Normal" VerticalAlignment="Center" />
                            <TextBlock Text="NEW PLAYER" FontSize="25" Margin="250,0,0,0" VerticalAlignment="Center" />
                        </Grid>
                    </Button.Content>
                </Button>



            </StackPanel>

        </Viewbox>

        <!-- Use a ScrollViewer to enable scrolling -->
        <ScrollViewer Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center">
            <StackPanel Margin="0,200,0,0">
                <!-- Content goes here -->
                <ListView x:ConnectionId='11' x:Name="PlayerListView" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="1500">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <!-- Adjust the Width and Height of the StackPanel as needed -->
                            <StackPanel Orientation="Horizontal" Width="1400" Height="100">
                                <!-- Use a Viewbox to scale the TextBlock -->
                                <Viewbox VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="SemiLight" FontStyle="Normal" Foreground="White" Margin="10,0"
                               TextAlignment="Left" TextWrapping="Wrap" />
                                </Viewbox>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="10,50,0,0"/>
                            <Setter Property="Height" Value="Auto"/>
                            <!-- Allow the items to adjust their height -->
                            <Setter Property="Width" Value="1350"/>
                            <!-- Adjust other properties like Height, Width, Padding, etc. as needed -->
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

            </StackPanel>
        </ScrollViewer>





        <!-- Back Button -->
        <Button x:ConnectionId='10' Grid.Row="4" Margin="0,10" Style="{StaticResource CustomTransparentButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="100" Height="40"                         >
            <Button.Content>
                <TextBlock Text="BACK" FontSize="20" CharacterSpacing="300"/>
            </Button.Content>
        </Button>

    </Grid>
</Page>

