<Page
    x:Class="CP4.Pages.EditTeamPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.Resources>

        <Style x:Key="CustomTransparentButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonPointerOverForegroundThemeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonPressedForegroundThemeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonDisabledForegroundThemeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter"
                         Content="{TemplateBinding Content}"
                         ContentTransitions="{TemplateBinding ContentTransitions}"
                         ContentTemplate="{TemplateBinding ContentTemplate}"
                         Margin="{TemplateBinding Padding}"
                         HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                         VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NewPlayerButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontWeight" Value="SemiLight" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>


    </Page.Resources>


    <ScrollViewer>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <!-- Define gradient stops with the specified colors -->
                    <GradientStop Color="#417CDB" Offset="0" />
                    <GradientStop Color="#2657A7" Offset="0.5" />
                    <GradientStop Color="#253E97" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <!-- Add a new row for the "Add New Player" button -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                <!-- Header with Team Name -->
                <TextBlock x:ConnectionId='16' x:Name="TeamNameText" Text="" Foreground="White" FontSize="25" Margin="100,0,100,0" />
            </Viewbox>

            <Viewbox Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                    <!-- New Player Button goes here -->
                    <Button x:ConnectionId='15' Style="{StaticResource NewPlayerButtonStyle}" Width="450" Height="45"                               Margin="100,20,100,0">
                        <Button.Content>
                            <Grid>
                                <TextBlock Text="+" FontSize="55" FontWeight="SemiLight" FontStyle="Normal" VerticalAlignment="Center" Margin="-20,-10,0,0"/>
                                <TextBlock Text="NEW PLAYER" FontSize="25" VerticalAlignment="Center" Margin="250,0,0,0" />
                            </Grid>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Viewbox>

            <Viewbox Grid.Row="2" Margin="20">
                <ListView x:ConnectionId='11' x:Name="PlayerListView" VerticalAlignment="Top" HorizontalAlignment="Center" Width="900">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <!-- Adjust the Width and Height of the StackPanel as needed -->
                                <StackPanel Orientation="Horizontal">
                                    <!-- Use a Viewbox to scale the TextBlock -->
                                    <Viewbox VerticalAlignment="Center">
                                        <!-- Decrease the left margin to move the player name to the left -->
                                        <TextBlock Text="{Binding Name}" FontSize="45" FontWeight="SemiLight" FontStyle="Normal" Foreground="White"
                                   TextAlignment="Left" TextWrapping="Wrap" />
                                    </Viewbox>
                                </StackPanel>

                                <!-- Add space between Edit and Delete buttons by adding margin to the Delete button -->
                                <Button x:ConnectionId='13' Content="Delete" Style="{StaticResource CustomTransparentButtonStyle}" HorizontalAlignment="Right"
        VerticalAlignment="Center" Width="70" Height="40"                           >
                                    <!-- Pass the player's ID or any necessary information to identify the player -->
                                    <Button.Tag>
                                        <Binding Path="Id"/>
                                    </Button.Tag>
                                </Button>

                                <!-- Edit Button -->
                                <Button x:ConnectionId='14' Content="Edit" Style="{StaticResource CustomTransparentButtonStyle}" HorizontalAlignment="Right"
        VerticalAlignment="Center" Width="70" Height="40"                           Margin="100,0">
                                    <!-- Pass the player's ID or any necessary information to identify the player -->
                                    <Button.Tag>
                                        <Binding Path="Id"/>
                                    </Button.Tag>
                                </Button>



                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="130,25" />
                            <Setter Property="Height" Value="Auto" />
                            <!-- Allow the items to adjust their height -->
                            <Setter Property="Width" Value="Auto" />
                            <!-- Adjust other properties like Height, Width, Padding, etc. as needed -->
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

            </Viewbox>



            <!-- Back Button -->
            <Button x:ConnectionId='10' Grid.Row="3" Margin="10" Style="{StaticResource CustomTransparentButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="100" Height="40"                         >
                <Button.Content>
                    <TextBlock Text="BACK" FontSize="20" CharacterSpacing="300" />
                </Button.Content>
            </Button>
        </Grid>
    </ScrollViewer>
</Page>

